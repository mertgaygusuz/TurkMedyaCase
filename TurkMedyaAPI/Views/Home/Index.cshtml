@model List<TurkMedyaAPI.Models.NewsItem>

@{
    ViewBag.Title = "Ana Sayfa";
}

<h2>Haber Listesi</h2>

<form method="get" asp-controller="Home" asp-action="Index">
    <input type="text" name="keyword" placeholder="Anahtar Kelime" value="@ViewBag.Keyword" />
    <select name="category">
        <option value="">TÜMÜ</option>
        <option value="GÜNCEL" @(ViewBag.Category == "GÜNCEL" ? "selected" : "")>GÜNCEL</option>
        <option value="DÜNYA" @(ViewBag.Category == "DÜNYA" ? "selected" : "")>DÜNYA</option>
        <option value="SPOR" @(ViewBag.Category == "SPOR" ? "selected" : "")>SPOR</option>
    </select>
    <button type="submit">Filtrele</button>
</form>

@foreach (var item in Model)
{
    <div>
        <h3>@item.Title</h3>
        @if (!string.IsNullOrEmpty(item.ImageUrl))
        {
            <img src="@item.ImageUrl" alt="@item.Title" style="max-width: 50%; height: auto;" />
        }
        <p>@item.ShortText</p>
        <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.ItemId">Detaya git</a>
    </div>
}

<div>
    @if (ViewBag.CurrentPage > 1)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
    }
    Sayfa @ViewBag.CurrentPage
    <a asp-controller="Home" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">İleri</a>
</div>
